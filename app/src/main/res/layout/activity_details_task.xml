<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".otheractivity.DetailsTaskActivity" android:id="@+id/constraintLayout">

    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp">

        <CheckBox
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/cb_completed" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10" android:hint="Add a new title for this task"
                android:id="@+id/edt_title" android:background="@android:color/transparent"
                app:layout_constraintStart_toEndOf="@+id/cb_completed" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cb_completed"
                app:layout_constraintBottom_toBottomOf="@+id/cb_completed"/>
        <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp" android:background="@mipmap/pick_time"
                android:id="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/cb_completed"/>
        <Spinner
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:id="@+id/spinner_date" app:layout_constraintStart_toEndOf="@+id/imageView2"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/imageView2"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"/>
        <Spinner
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:id="@+id/spinner_time" app:layout_constraintStart_toEndOf="@+id/spinner_date"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/spinner_date"
                app:layout_constraintBottom_toBottomOf="@+id/spinner_date"/>
        <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp" android:background="@mipmap/priority"
                android:id="@+id/imageView3" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
        <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp" android:background="@mipmap/location"
                android:id="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView3"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:hint="Add location"
                android:id="@+id/tv_location" app:layout_constraintStart_toEndOf="@+id/imageView4"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:textSize="18sp"
                app:layout_constraintTop_toTopOf="@+id/imageView4"
                app:layout_constraintBottom_toBottomOf="@+id/imageView4"/>
        <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp" android:background="@mipmap/uncategorized"
                android:id="@+id/imageView5" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView4"
                android:layout_marginTop="24dp"/>
        <TextView
                android:text="Priority" android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" app:layout_constraintStart_toEndOf="@+id/imageView3"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/imageView3"
                app:layout_constraintBottom_toBottomOf="@+id/imageView3"/>
        <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp" android:background="@mipmap/reminder"
                android:id="@+id/imageView6" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView5"
                android:layout_marginTop="24dp"/>
        <TextView
                android:layout_width="wrap_content" android:textSize="18sp"
                android:layout_height="wrap_content" android:hint="Add reminder"
                android:id="@+id/tv_add_reminder" app:layout_constraintStart_toEndOf="@+id/imageView6"
                android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/imageView6"
                app:layout_constraintBottom_toBottomOf="@+id/imageView6"/>
        <Spinner
                android:layout_width="105dp"
                android:layout_height="27dp"
                android:id="@+id/spinner_ring" app:layout_constraintStart_toEndOf="@+id/tv_add_reminder"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/imageView6"
                app:layout_constraintBottom_toBottomOf="@+id/imageView6"/>
        <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp" android:background="@mipmap/attach"
                android:id="@+id/imageView7" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView6"/>
        <TextView
                android:textSize="18sp"
                android:layout_width="0dp" android:hint="Add attachment"
                android:layout_height="wrap_content"
                android:id="@+id/tv_add_attach_file" app:layout_constraintStart_toEndOf="@+id/imageView7"
                android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/imageView7"
                app:layout_constraintBottom_toBottomOf="@+id/imageView7" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp" android:background="@mipmap/description_note"
                android:id="@+id/imageView8" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView7"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:ems="10" android:maxLines="10" android:hint="Description"
                android:id="@+id/edt_description_note"
                android:inputType="textMultiLine"
                app:layout_constraintStart_toEndOf="@+id/imageView8" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView8"
        />
        <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#9E9E9E"
                app:layout_constraintTop_toBottomOf="@+id/edt_title"
                app:layout_constraintBottom_toTopOf="@+id/spinner_date" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp" android:id="@+id/line1"/>
        <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#9E9E9E"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/spinner_date"
                android:layout_marginTop="8dp"
                android:id="@+id/line2"/>
        <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#9E9E9E"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toTopOf="@+id/tv_location" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp" android:id="@+id/line3"
                app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="8dp"/>
        <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#9E9E9E"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginStart="8dp" android:id="@+id/line4"/>
        <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#9E9E9E"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/imageView6"
                app:layout_constraintTop_toBottomOf="@+id/imageView5" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                android:layout_marginStart="8dp" android:layout_marginBottom="8dp" android:id="@+id/line5"/>
        <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#9E9E9E"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintTop_toBottomOf="@+id/tv_add_reminder"
                app:layout_constraintBottom_toTopOf="@+id/tv_add_attach_file" android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" android:id="@+id/line6"/>
        <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#9E9E9E"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/imageView8"
                app:layout_constraintTop_toBottomOf="@+id/imageView7" android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginStart="8dp" android:id="@+id/line7"/>
        <RadioGroup
                android:layout_width="0dp"
                android:layout_height="0dp" android:orientation="horizontal" android:gravity="center_vertical"
                app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/line2" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/line3" android:id="@+id/radio_priority_choice">
            <RadioButton
                    android:layout_width="wrap_content" android:text="Low"
                    android:layout_height="wrap_content" android:id="@+id/btnLow" android:layout_weight="1"/>
            <RadioButton
                    android:text="Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnNormal" android:layout_weight="1"/>
            <RadioButton
                    android:text="High"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnHigh" android:layout_weight="1"/>
        </RadioGroup>
        <TextView
                android:text="Uncategorized"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_uncategorized" app:layout_constraintStart_toEndOf="@+id/imageView5"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintTop_toBottomOf="@+id/line4"
                app:layout_constraintBottom_toTopOf="@+id/line5" android:textSize="18sp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>